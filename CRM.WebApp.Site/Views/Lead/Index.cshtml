@model IEnumerable<LeadViewModel>

<div class="col-md-8 ml-auto mr-auto">
    <h2 class="text-center">Leads</h2>
    <p class="text-center">
        Nessa seção ficam armazenados todos os leads da venda de ingresso das olimpíadas.
    </p>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">
    Adicionar lead
</a>

<div class="row mt-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>

                <div class="table-responsive">
                    <table id="datatable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nome Completo</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th class="text-right">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lead in Model)
                            {
                                <tr>
                                    <td>@lead.FullName</td>
                                    <td>@lead.Email</td>
                                    <td>@lead.Telephone</td>
                                    <td class="text-right">
                                        <a class="btn btn-link btn-warning btn-icon btn-sm edit" href="@Url.Action("Details", new { id = lead.LeadID })" data-toggle="tooltip" title="Detalhes" aria-label="Detalhes do Lead">
                                            <i class="tim-icons icon-pencil"></i>
                                        </a>
                                        <a class="btn btn-link btn-danger btn-icon btn-sm btn-neutral remove" href="@Url.Action("DeleteConfirmed", new { id = lead.LeadID })" data-toggle="tooltip" title="Excluir" aria-label="Excluir Lead" onclick="return confirm('Tem certeza que deseja excluir este lead?');">
                                            <i class="tim-icons icon-simple-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Nome Completo</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th class="text-right">Ações</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}