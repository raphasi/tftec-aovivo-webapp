@model CRM.WebApp.Site.Models.CustomerViewModel

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>@ViewData["Title"]</h2>

<h4>Customer</h4>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CustomerID" name="id" />
    <input type="hidden" asp-for="CustomerID" name="CustomerID" />
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Infos registro</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Data de Criação</label>
                        <div class="form-group">
                            <input asp-for="CreatedOn" class="form-control datetimepicker" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Data de Modificação</label>
                        <div class="form-group">
                            <input asp-for="ModifiedOn" class="form-control datetimepicker" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Criado por</label>
                        <div class="form-group">
                            <input asp-for="CreatedByName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Modificado por</label>
                        <div class="form-group">
                            <input asp-for="ModifiedByName" class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Tipo Cliente</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <select asp-for="TypeLead" class="selectpicker" data-size="7" data-style="btn btn-primary" title="Single Select">
                            <option disabled selected>Tipo de Cliente</option>
                            <option value="1">Pessoa Física</option>
                            <option value="2">Pessoa Jurídica</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Status do Cliente</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <select asp-for="StatusCode" class="selectpicker" data-size="7" data-style="btn btn-primary" title="Single Select">
                            <option disabled selected>Status</option>
                            <option value="1">Ativo</option>
                            <option value="2">Inativo</option>
                            <option value="4">Ganha</option>
                            <option value="5">Perdido</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Informações Cliente</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <label asp-for="CPF" class="col-sm-2 col-form-label">CPF</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="CPF" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="CNPJ" class="col-sm-2 col-form-label">CNPJ</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="CNPJ" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="FullName" class="col-sm-2 col-form-label">Nome Completo</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="FullName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="FirstName" class="col-sm-2 col-form-label">Primeiro Nome</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="FirstName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="LastName" class="col-sm-2 col-form-label">Sobrenome</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="LastName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Email" class="col-sm-2 col-form-label">E-mail</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Telephone" class="col-sm-2 col-form-label">Telefone</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Telephone" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Endereço</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <label asp-for="Address_PostalCode" class="col-sm-2 col-form-label">CEP</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address_PostalCode" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Address1" class="col-sm-2 col-form-label">Rua</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address1" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Address_Adjunct" class="col-sm-2 col-form-label">Bairro</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address_Adjunct" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Address_City" class="col-sm-2 col-form-label">Cidade</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address_City" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Address_Country" class="col-sm-2 col-form-label">País</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address_Country" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Address_State" class="col-sm-2 col-form-label">Estado</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Address_State" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-7">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}