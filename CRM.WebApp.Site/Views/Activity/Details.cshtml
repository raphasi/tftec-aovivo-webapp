@model CRM.WebApp.Site.Models.ActivityViewModel

@{
    ViewData["Title"] = "Detalhes da Atividade";
}

<h2>@ViewData["Title"]</h2>

<h4>Activity</h4>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ActivityID" name="id" />
    <input type="hidden" asp-for="ActivityID" name="ActivityID" />
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Infos registro</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Data de Criação</label>
                        <div class="form-group">
                            <input asp-for="CreatedOn" class="form-control datetimepicker" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Data de Modificação</label>
                        <div class="form-group">
                            <input asp-for="ModifiedOn" class="form-control datetimepicker" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Criado por</label>
                        <div class="form-group">
                            <input asp-for="CreatedByName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-3 col-form-label">Modificado por</label>
                        <div class="form-group">
                            <input asp-for="ModifiedByName" class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Status da Atividade</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <select asp-for="StatusCode" class="selectpicker" data-size="7" data-style="btn btn-primary" title="Single Select">
                            <option disabled selected>Status</option>
                            <option value="1">Ativo</option>
                            <option value="2">Inativo</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Informações da Atividade</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <label asp-for="Type" class="col-sm-2 col-form-label">Tipo</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Type" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Descrição</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <input asp-for="Description" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label asp-for="OpportunityID" class="col-sm-2 col-form-label">Oportunidade</label>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <select asp-for="OpportunityID" class="form-control">
                                            <option value="">Selecione uma Oportunidade</option>
                                            @* Aqui você pode preencher as opções com as oportunidades disponíveis *@
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}