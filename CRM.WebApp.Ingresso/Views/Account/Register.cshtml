@model RegisterViewModel

@{
    ViewData["Title"] = "Registrar";
}

<div class="wrapper wrapper-full-page">
    <div class="full-page register-page">
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 ml-auto">
                        <div class="info-area info-horizontal">
                            <div class="icon icon-info">
                                <i class="tim-icons icon-trophy"></i>
                            </div>
                            <div class="description">
                                <h3 class="info-title">Olimpíadas Azure</h3>
                                <p class="description">
                                    O verdadeiro evento de Azure do Mundo!
                                </p>
                            </div>
                        </div>
                        <div class="info-area info-horizontal">
                            <div class="icon icon-info">
                                <i class="tim-icons icon-calendar-60"></i>
                            </div>
                            <div class="description">
                                <h3 class="info-title">Programação</h3>
                                <p class="description">
                                    Marque em sua agenda de 01/08 até 22/08
                                </p>
                            </div>
                        </div>
                        <div class="info-area info-horizontal">
                            <div class="icon icon-info">
                                <i class="tim-icons icon-globe-2"></i>
                            </div>
                            <div class="description">
                                <h3 class="info-title">Premiação</h3>
                                <p class="description">
                                    Conquiste conhecimento, aprendizado, TFTEC Prime e um XBOX
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 mr-auto">
                        <div class="card card-register card-white">
                            <div class="card-header">
                                <img class="card-img" src="~/assets/img/card-primary.png" alt="Card image">
                                <h4 class="card-title">Registrar</h4>
                            </div>
                            <div class="card-body">
                                <form asp-action="Register" method="post" id="RegisterForm" class="form">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="tim-icons icon-single-02"></i>
                                            </div>
                                        </div>
                                        <input asp-for="FullName" class="form-control" placeholder="Nome Completo"/>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="tim-icons icon-email-85"></i>
                                            </div>
                                        </div>
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="tim-icons icon-mobile"></i>
                                            </div>
                                        </div>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefone" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="tim-icons icon-single-02"></i>
                                            </div>
                                        </div>
                                        <input asp-for="UserName" class="form-control" placeholder="Nome de Usuário" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="tim-icons icon-lock-circle"></i>
                                            </div>
                                        </div>
                                        <input asp-for="Password" class="form-control" type="password" placeholder="Senha" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-check text-left">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox">
                                            <span class="form-check-sign"></span>
                                            Eu concordo com os
                                            <a href="https://tftec.com.br/cloud/termos">termos e condições</a>.
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Registrar" class="btn btn-primary btn-round btn-lg" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}