@model IEnumerable<CRM.WebApp.Ingresso.Models.EventViewModel>

@{
    ViewData["Title"] = "Eventos";
}

<div class="container">
    <h2>Ingressos | Eventos | Jogos Olímpicos</h2>
    <div class="row">
        @foreach (var evento in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@evento.ImageUrl" alt="@evento.Name">
                    <div class="card-body">
                        <h4 class="card-title">@evento.Description</h4>
                        <p class="card-text"><strong>Data:</strong> @evento.EventDate.Value.ToShortDateString()</p>
                        <p class="card-text"><strong>Preço:</strong> @evento.TicketPrice?.ToString("C")</p>
                        <a href="@Url.Action("Details", "Store", new { id = evento.EventID })" class="btn btn-facebook">Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>